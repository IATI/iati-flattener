    "devDependencies": {
        "@prettier/plugin-xml": "^1.1.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.24.2",
        "husky": "^7.0.2",
        "lint-staged": "^11.2.3",
        "prettier": "^2.4.1"
    },
    "lint-staged": {
        "*.js": "eslint --cache --fix",
        "*.{js,css,md}": "prettier --write"
